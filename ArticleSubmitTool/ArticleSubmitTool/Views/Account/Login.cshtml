@using ArticleSubmitTool.Models
@using Microsoft.Owin.Security

@model LoginViewModel



<div class="container">



        <div class="section article-detail row border z-depth-1 centered login">
            <h4>Login</h4>

            @using (Html.BeginForm("Login", "Account", new {ReturnUrl = ViewBag.ReturnUrl, autocomplete = "off"}, FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new {@class = "color-danger"})

                <div class="input-field col s12">
                    @Html.LabelFor(m => m.Email, new {@class = "input-field"})
                    @Html.TextBoxFor(m => m.Email, new {@class = "validate input-field"})
                    @Html.ValidationMessageFor(m => m.Email, "", new {@class = "text-danger"})
                </div>

                <div class="input-field col s12">
                    @Html.LabelFor(m => m.Password, new {@class = "input-field"})
                    @Html.PasswordFor(m => m.Password, new {@class = "validate input-field", value = Model.Password})
                    @Html.ValidationMessageFor(m => m.Password, "", new {@class = "text-danger"})
                </div>

                <div class="row">
                    <input class="btn btn-success col s12" type="submit" value="Log In" />
                </div>
            }


</div>



