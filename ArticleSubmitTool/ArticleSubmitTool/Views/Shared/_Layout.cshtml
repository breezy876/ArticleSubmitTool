@using ArticleSubmitTool.Code

@{

}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/materialize")
    @Scripts.Render("~/bundles/tinymce")
    @Scripts.Render("~/bundles/linq")



    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>

<input type="hidden" id="fbAppId" value="@Settings.FacebookAppId"/>

<div id="fb-root"></div>

@if (ViewBag.HideNavBars == null || !ViewBag.HideNavBars)
    {
        <ul id="slide-out" class="side-nav fixed">
            <li class="top side-nav-item"><a href="#!"></a></li>
            <li class="side-nav-item"><a href="#!"><i class="fa fa-tachometer"></i> Dashboard</a></li>
            <li class="side-nav-item"><a href="/Article"><i class="fa fa-file"></i> Articles</a></li>
            <li class="side-nav-item"><a href="/Settings"><i class="fa fa-wrench"></i> Settings</a></li>
        </ul>

        <nav>
            <div class="top-nav nav-wrapper">
                <ul id="nav-mobile" class="right hide-on-med-and-down">
                    <li class="top-nav"><a href="#!" data-activates="topNavDropdown" class="dropdown-button"><i class="fa fa-user"></i>&nbsp; @SessionManager.DisplayName</a></li>
                    <li class="top-nav hidden"><a href="#!" class="dropdown-button">&nbsp;</a></li>
                </ul>
            </div>
        </nav>

        <ul id="topNavDropdown" class="dropdown-content">
            <li><a href="/Account/Logout"><i class="fa fa-power-off"></i>&nbsp;Logout</a></li>
            <li><a href="/Settings"><i class="fa fa-gear"></i>&nbsp;Settings</a></li>
        </ul>
}


<div id="content-wrapper" class="container">
    @RenderBody()
</div>

<script src="//connect.facebook.net/en_US/all.js"></script>

<script src="/Scripts/Global.js"></script>
<script src="/Scripts/Facebook.js"></script>
@*<script type="text/javascript" src="http://connect.facebook.net/en_US/all.js"></script>

<script src="@Url.Content("~/Scripts/Facebook.js")" type="text/javascript"></script>*@
    <script>
        $(document).ready(function () {
            //var scope = $('#dvController').scope();
            globalInit();
        });
    </script>

@RenderSection("scripts", required: false)
</body>
</html>
